<div class="row my-2">
  <% @lists.each do |list| %>
    <%= link_to list_path(list), class:"text-decoration-none" do %>
      <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
          <div class="post-container">
            <div class="bg-white rounded shadow h-100">
              <%= list.name %>
              <div class="p-3 rounded-bottom d-flex flex-column"></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
